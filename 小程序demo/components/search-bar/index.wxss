/* components/search-bar/index.wxss */

page {
  width: 100%;
}

.search-bar-component {
  width: 100%;
  height: 45rpx;
  display: flex;
  flex-direction: row;
}

.search-bar-left {
  background-color: #efeff4;
  width: 45rpx;
  height: 45rpx;
  border-radius: 50% 0 0 50%;
}

.search-bar-middle {
  background-color: #efeff4;
  height: 45rpx;
  flex: 1;
}

.search-bar {
  background-color: #efeff4;
  height: 45rpx;
  font-size: 20rpx;
}

.search-bar-right {
 background-color: #efeff4;
  width: 45rpx;
  height: 45rpx;
  border-radius: 0 50% 50% 0;
}
