<!--pages/tourism/index.wxml-->
<view class="mine-main">

<view class="mine-avatar">
<view class="mine-avatar-show">
<view class="mine-avatar-show-border-radius">
<image src="{{userAvatarUrl}}" class="avatar-img"></image>
</view>
</view>
<view class="mine-nickname-show">{{userNickName}}</view>
</view>


<view class="mine-watch-history">

<view class="mine-watch-history-top">
<view class="mine-watch-history-content">历史记录</view>

<view class="mine-watch-history-showmore">
<view class="mine-watch-history-showmore-title">查看更多</view>
<view class="mine-watch-history-showmore-iocn"><icon class="iconfont icon-gengduo icon-gengduo-size"/></view>
</view>

</view>
<view class="mine-watch-history-bottom"><view class="mine-watch-history-block"  wx:for="{{historyRecord}}">{{item}}</view></view>

</view>

<view class="mine-collection">
<view class="mine-collection-top">
<view class="mine-collection-title">我的收藏</view>
<view class="mine-collection-showmore">
<view class="mine-collection-showmore-title">查看更多</view>
<view class="mine-collection-showmore-iocn"><icon class="iconfont icon-gengduo icon-gengduo-size"/></view>
</view>
</view>

<view class="mine-collection-bottom"><view class="mine-collection-block"wx:for="{{myCollection}}">{{item}}</view></view>

</view>


<view class="addvice-feedback">意见反馈</view>

</view>
