/* pages/search-details/index.wxss */
@import "/wxParse/wxParse.wxss";

page {
  width: 100%;
  height: 100%;
}

.search-details-main {
  width: 100%;
  height: 100%;
}

.search-flex-range {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.search-details-text {
  flex: 1;
  /* background-color: red; */
  display: flex;
  flex-direction: column;
}

.search-details-top {
  height: 100rpx;
  /* background-color: olivedrab; */
  font-size: 37rpx;
  text-align: center;
  line-height: 100rpx;
  font-weight: 700;
}

.search-details-mid-tag {
  flex: 8.5;
  /* background-color: royalblue; */
   width: 100%;
  line-height: 60rpx;
  padding-left: 20rpx;
}

.search-details-mid-collect {
  flex: 1.5;
  /* background-color: sienna; */
  text-align: center;
  line-height: 60rpx;
}

.search-details-mid {
  height: 60rpx;
  /* background-color: pink; */
  font-size: 25rpx;
  display: flex;
  flex-direction: row;
  border-bottom:1rpx dashed #808080;
  padding-bottom: 10rpx;
 
}

.search-details-bottom {
  flex: 1;
  /* background-color: purple; */
  overflow:auto;
  padding-top: 20rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
   border-bottom:1rpx solid #efeff4;
}

.search-details-record {
  /* background-color: pink; */
  width: 100%;
  height: 60rpx;
  padding-bottom: 60rpx;
  display: flex;
  flex-direction: row;
}

.search-details-record-left
{
  flex: 2;
  padding-left: 10rpx;
  font-size: 30rpx;
  color: #808080;
  padding-top: 5rpx;
}

.search-details-record-right
{
  flex: 8;
}

.search-details-record-tag
{
  background-color: #efeff4;
  display: inline-block;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
  border-radius: 10rpx;
  font-size: 25rpx;
  color: #808080;
  
}


.search-details-fixed-bottom {
  position: fixed;
  width: 100%;
  height: 70rpx;
  bottom: 0;
  /* background-color: yellow; */
  border-top:1rpx solid #efeff4;
  display: flex;
  flex: row;
}

.fixed-share-friends {
  flex: 1;
  /* background-color: orange; */
  line-height: 70rpx;
  text-align: center;
  border-right:1rpx solid #efeff4;
}

.share-Button
{
  max-width: 100%;
  height: 100%;
    line-height: 70rpx;
    font-size: 30rpx;
}

.fixed-generate-poster {
  flex: 1;
  /* background-color: brown; */
  line-height: 70rpx;
  text-align: center;
}

.screen-shot-show
{
  width: 100%;
  height: 100%;
}